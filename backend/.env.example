# 智能教育平台 - 环境配置示例文件
# 复制此文件为 .env 并根据实际环境修改配置
# ==============================================

# ===================
# 应用基础配置
# ===================
APP_NAME="中小学智能批改平台"
APP_VERSION="1.0.0"
DEBUG=True
ENVIRONMENT=development

# 服务器配置
HOST=0.0.0.0
PORT=8000

# ===================
# 安全和认证配置
# ===================
SECRET_KEY=your-super-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=10080

# ===================
# 数据库配置
# ===================
# 开发环境使用SQLite
DATABASE_URL=sqlite:///./app.db
DATABASE_POOL_SIZE=20
DATABASE_POOL_OVERFLOW=0

# 生产环境使用PostgreSQL（可选）
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=zyjc_db
# DB_USER=postgres
# DB_PASSWORD=postgres123

# ===================
# Redis缓存配置
# ===================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_URL=redis://localhost:6379/0
REDIS_EXPIRE_TIME=3600

# ===================
# VIP系统配置
# ===================
# 普通用户每日免费出题次数
DEFAULT_DAILY_QUOTA=3
# VIP用户无限制标识（-1表示无限制）
VIP_UNLIMITED_QUOTA=-1
# 每日配额重置时间（24小时制）
QUOTA_RESET_TIME=00:00

# ===================
# 微信小程序配置
# ===================
WECHAT_APP_ID=your-wechat-app-id
WECHAT_APP_SECRET=your-wechat-app-secret

# ===================
# OCR服务配置
# ===================
BAIDU_OCR_API_KEY=your-baidu-ocr-api-key
BAIDU_OCR_SECRET_KEY=your-baidu-ocr-secret-key
MATHPIX_APP_ID=your-mathpix-app-id
MATHPIX_APP_KEY=your-mathpix-app-key

# ===================
# AI服务配置
# ===================
OPENAI_API_KEY=your-openai-api-key
CLAUDE_API_KEY=your-claude-api-key
BAIDU_WENXIN_API_KEY=your-baidu-wenxin-api-key
YOUDAO_API_KEY=your-youdao-api-key
YOUDAO_SECRET_KEY=your-youdao-secret-key

# ===================
# 文件存储配置
# ===================
# 本地文件上传路径
UPLOAD_PATH=uploads
MAX_FILE_SIZE=10485760
ALLOWED_EXTENSIONS=.jpg,.jpeg,.png,.bmp,.webp

# 阿里云OSS配置（可选）
ALIYUN_OSS_ACCESS_KEY_ID=your-aliyun-oss-access-key-id
ALIYUN_OSS_ACCESS_KEY_SECRET=your-aliyun-oss-access-key-secret
ALIYUN_OSS_BUCKET_NAME=your-bucket-name
ALIYUN_OSS_ENDPOINT=your-oss-endpoint

# ===================
# 支付配置
# ===================
WECHAT_PAY_MCH_ID=your-wechat-pay-mch-id
WECHAT_PAY_API_KEY=your-wechat-pay-api-key
ALIPAY_APP_ID=your-alipay-app-id
ALIPAY_PRIVATE_KEY=your-alipay-private-key
ALIPAY_PUBLIC_KEY=your-alipay-public-key

# ===================
# 日志和监控配置
# ===================
LOG_LEVEL=INFO
LOG_FILE=logs/app.log
SENTRY_DSN=your-sentry-dsn

# ===================
# CORS跨域配置
# ===================
# 允许的前端域名，多个域名用逗号分隔
BACKEND_CORS_ORIGINS=http://localhost:3000,http://localhost:8000,http://localhost:8001,http://localhost:8080,https://localhost:3000,https://localhost:8000,https://localhost:8001,https://localhost:8080

# ===================
# 生产环境优化配置
# ===================
# 是否启用压缩
ENABLE_GZIP=True
# API限流配置（每分钟最大请求数）
RATE_LIMIT_PER_MINUTE=60
# 是否启用访问日志
ENABLE_ACCESS_LOG=True

# ===================
# 开发调试配置
# ===================
# 是否显示详细错误信息
SHOW_ERROR_DETAILS=True
# 是否启用SQL查询日志
LOG_SQL_QUERIES=False
# 是否启用性能分析
ENABLE_PROFILING=False